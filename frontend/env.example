# Seiki Chat Frontend Environment Variables
# Copy this file to .env and update the values

# API Configuration
VITE_API_URL=http://localhost:5000
VITE_SOCKET_URL=http://localhost:5000

# App Configuration
VITE_APP_NAME=Seiki Chat
VITE_APP_VERSION=1.0.0

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG_MODE=false

# Token Configuration
VITE_TOKEN_PRICE=0.01
VITE_DEFAULT_TOKEN_AMOUNT=50

# UI Configuration
VITE_DEFAULT_THEME=light
VITE_MAX_MESSAGE_LENGTH=1000
VITE_MAX_CHARACTER_NAME_LENGTH=100
VITE_MAX_DESCRIPTION_LENGTH=500

